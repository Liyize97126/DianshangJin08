<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.OrderListActivity"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_weight="2">

        <RelativeLayout
            android:id="@+id/dingbtn_01"
            android:layout_width="0dp"
            android:background="@drawable/layxuan"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ding01"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/alllist"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部订单"
                android:textSize="22sp"
                android:layout_below="@id/ding01"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dingbtn_02"
            android:layout_width="0dp"
            android:background="@drawable/layxuan"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ding02"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pay"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="22sp"
                android:layout_below="@id/ding02"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dingbtn_03"
            android:layout_width="0dp"
            android:background="@drawable/layxuan"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ding03"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/receive"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待收货"
                android:textSize="22sp"
                android:layout_below="@id/ding03"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dingbtn_04"
            android:layout_width="0dp"
            android:background="@drawable/layxuan"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ding04"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/comment"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待评价"
                android:textSize="22sp"
                android:layout_below="@id/ding04"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dingbtn_05"
            android:layout_width="0dp"
            android:background="@drawable/layxuan"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ding05"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/finish"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已完成"
                android:textSize="22sp"
                android:layout_below="@id/ding05"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"/>

</LinearLayout>